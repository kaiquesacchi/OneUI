{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@atoms": ["src/components/atoms"],
      "@atoms/*": ["src/components/atoms/*"],
      "@buttons": ["src/components/buttons"],
      "@buttons/*": ["src/components/buttons/*"],
      "@focusBlocks": ["src/components/focusBlocks"],
      "@focusBlocks/*": ["src/components/focusBlocks/*"],
      "@layouts": ["src/components/layouts"],
      "@layouts/*": ["src/components/layouts/*"],
      "@toasts": ["src/components/toasts"],
      "@toasts/*": ["src/components/toasts/*"]
    }
  }
}
